{{#each user}}
<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="">
            <div class="d-flex align-items justify-content-start">
                <div class="imgProfile">
                    {{#if image}}
                        <img src="{{image}}" class="rounded-circle" height="150px" width="150px" alt="Imagem de {{username}}">
                    {{else}}
                        <img src="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_960_720.png" class="img-fluid rounded-circle" height="150px" width="150px" alt="Imagem de {{username}}">
                    {{/if}}
                </div>
                <div class="ms-3 align-self-center">
                    <h5 class="mb-0">{{username}}</h5>
{{/each}}
{{#each user}}
                </div>
            </div>
            <div class="mt-3">
                <ul class="d-flex align-items-center list-unstyled">
                    <li class="me-3">
                        <span class="text-muted">
                            <a href="/@{{username}}/posts">Publicações</a>
                        </span>
                    </li>
                    <li class="me-3">
                        <span>
                            <a href="/@{{username}}/comentarios">Comentários</a>
                        </span>
                    </li>
                </ul>
                <p class="text-muted" title="Data de criação do perfil">
                    {{datetime}}
                </p>
            </div>
            <hr>
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header text-center">
        {{/each}}
                                <span>
                                    Sobre o usuário
                                </span>
                            </div>
        {{#each user}}
                            <div class="card-body p-3">
                                <div>
                                    <div class="card-body">
                                        <form action="/edit-profile" method="post">
                                            <div class="mb-3">
                                                <label for="biography" class="form-label">Biografia</label>
                                                <textarea class="form-control" id="biography" name="biography" style="height: 144px;" rows="3">{{{biography}}}</textarea>
                                            </div>
                                            <button type="submit" class="btn btn-primary">Salvar</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
        {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>